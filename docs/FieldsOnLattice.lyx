\begin_inset Formula 
\[
\partial_{t}E_{i}+\bm{n}\cdot\partial E_{i}=\frac{1}{2}\partial_{j}B_{ij}+\frac{1}{2}\partial_{n}^{2}B_{i}-\frac{1}{2}g'\text{Im }\left[\phi^{\dagger}\left(D_{i}\phi\right)\right]
\]

\end_inset


\end_layout

\begin_layout Standard
For Finite-Difference method,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\partial_{t}E_{i}=\frac{1}{\Delta t}\left[E_{i}\left(t+\frac{\Delta t}{2},x\right)-E_{i}\left(t-\frac{\Delta t}{2},x\right)\right]
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\bm{n}\cdot\partial E_{i}=\sum_{k}\frac{1}{\Delta x}\frac{\vert n_{k}\vert}{\Vert n\Vert}\left[\frac{1}{2}\left(E_{i}(t+\frac{\Delta t}{2},x)+E_{i}(t-\frac{\Delta t}{2},x)\right)-\frac{1}{2}\left(E_{i}(t+\frac{\Delta t}{2},x\mp n_{k})+E_{i}(t-\frac{\Delta t}{2},x\mp n_{k})\right)\right]
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\frac{1}{2}\partial_{j}B_{ij} & =\frac{1}{2\Delta x} & \sum_{n_{j}=0}B_{ij}(t,x)-B_{ij}(t,x-j)\\
 &  & +\frac{1}{2\Delta x}\frac{\vert n_{k}\vert}{\Vert n\Vert}\begin{cases}
\sum_{n_{j}\neq0}B_{ij}(t,x-j)-B_{ij}(t,x-2j) & ,n_{j}>0\\
\sum_{n_{j}\neq0}B_{ij}(t,x+j)-B_{ij}(t,x) & n_{j}<0
\end{cases}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{1}{2}\partial_{n}^{2}B_{i}=\frac{1}{2\Delta x^{2}}\left[B_{i}(t,x)-2B_{i}(t,x\mp n)+B_{i}(t,x\mp2n)\right],\ \text{for surface}
\]

\end_inset


\end_layout

\begin_layout Standard
The final expression is 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\left(1+\frac{\Delta t}{2\Delta x}\sum_{k}\frac{\vert n_{k}\vert}{\Vert n\Vert}\right)E_{i}(t+\frac{\Delta t}{2},x) & = & \left(1-\frac{\Delta t}{2\Delta x}\sum_{k}\frac{\vert n_{k}\vert}{\Vert n\Vert}\right)E_{i}(t-\frac{\Delta t}{2},x)\\
 &  & +\frac{\Delta t}{2\Delta x}\sum_{k}\frac{\vert n_{k}\vert}{\Vert n\Vert}\left[E_{i}(t+\frac{\Delta t}{2},x\mp n_{k})+E_{i}(t-\frac{\Delta t}{2},x\mp n_{k})\right]\\
 &  & +\Delta t\times R.H.S
\end{eqnarray*}

\end_inset


